<div class="col align-self-center card"> 
  <div class="card-header text-center">
    Sign up
  </div>

  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field form-group mb-3">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "name", class:"form-control mb-3", placeholder:"First Name" %>
      </div>  

      <div class="field form-group mb-3">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "name", class:"form-control mb-3", placeholder:"Last Name" %>
      </div>   

      <div class="field form-group mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-3", placeholder:"Email"  %>
      </div>

      <div class="field form-group mb-3">
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control mb-3", placeholder:"Password: #{@minimum_password_length} characters minimum" %>
      </div>
    
      <div class="field form-group mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control mb-3", placeholder:"Confirm Password: #{@minimum_password_length} characters minimum"  %>
      </div>

      <div class="field form-group text-center mb-3">
        <%= f.file_field :avatar, class:"form-control mb-4", placeholder:"Choose an Avatar" %>
      </div>

      <div class="actions form-group d-grid gap-2">
        <%= f.submit "Sign up", class:"btn btn-primary" %>
      </div>

    <% end %>
  </div>

  <div class="card-footer">
    <%= render "devise/shared/links"%>   
  </div>

</div>
