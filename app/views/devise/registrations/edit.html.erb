<div class="col align-self-center card">
  <div class="card-header text-center">
    Edit Your Personal Information
  </div>
  <div class="card-body">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field form-group mb-3">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "name", class:"form-control mb-3", placeholder:"First Name" %>
      </div>  

      <div class="field form-group mb-3">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "name", class:"form-control mb-3", placeholder:"Last Name" %>
      </div>   

      <div class="field form-group mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-3", placeholder:"Email"  %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field form-group mb-3">
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control mb-3", placeholder:"New Password: Leave blank if you don't want to change it (#{@minimum_password_length} characters minimum)" %>
      </div>

      <div class="field form-group mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control mb-3", placeholder:"Confirm New Password" %>
      </div>

      <div class="field form-group mb-3">
        <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control mb-3", placeholder:"Enter Current Password to confirm any changes" %>
      </div>

      <div class="field form-group text-center mb-3">
        <%= f.file_field :avatar, class:"form-control mb-4", placeholder:"Choose an Avatar" %>
      </div>

      <div class="field form-group mb-3 text-center">
        <%= f.label :birthday %><br />
        <%= f.date_select :birthday, :start_year=>1900, class:"form-control mb-4"%>
      </div> 

      <div class="actions">
        <%= f.submit "Update", class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
