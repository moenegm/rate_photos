<h1>Posts</h1>

<% if user_signed_in? %>
  <div class="nav-item">
      <%= link_to '+ New Post', new_post_path, class:"nav-link" %>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col">
      <% @posts.each do |post| %>
        <%= link_to (image_tag post.image, width:400), post %>    
      <% end %>
    </div>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Iso</th>
      <th>Shutter speed</th>
      <th>Appature</th>
      <th>Composition</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_id %></td>
        <td><%= post.name %></td>
        <td><%= post.iso %></td>
        <td><%= post.shutter_speed %></td>
        <td><%= post.appature %></td>
        <td><%= post.composition %></td>
        <td><%= post.location %></td>
        <td><%= post.description %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
