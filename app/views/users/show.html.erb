<div class="container">
    <div class="row justify-content-start">
        <div class="col"> 
            <% unless @user.avatar %>
                <%= link_to image_tag(@user.avatar, class:"avatar mb-3", border: 0) %>
            <% else %>
                <%= link_to image_tag("default_avatar",class:"avatar mb-3", border: 0) %>
            <% end %>
        </div>
    </div>

    <div class="row justify-content-start">
        <div class="col"> 
            <%= "#{@user.first_name} #{@user.last_name}" %>
        </div>
    </div>

    <div class="row justify-content-start">
        <div class="col">   
            <%= link_to 'Edit Personal Information', edit_user_registration_path(current_user), class:"btn btn-secondary mb-3" %>
        </div>
    </div>

    <div class="row">       
        <% @user.posts.each do |post| %>
            <div class="col-md-auto">
                <%= link_to (image_tag post.image, class:"img mb-4"), post %> 
            </div>
        <% end %>       
    </div>
</div>



