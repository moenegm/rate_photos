<%= link_to '+ New Support Post', new_support_path, class:"btn btn-secondary mb-3" %>
<% @supports.each do |support| %>
  
    <div class="row mb-4 align-items-start">

      <div class="col-auto ">
        <div class="col text-center ">
          <% if current_user %>
            <br>
            <%= render 'supports/upvote_link', support: support %>
            <%= render 'supports/like_count', support: support %>
            <%= render 'supports/downvote_link', support: support %>
          <% end %>
        </div>
      </div>

      <div class="col">
        <div class="card">
          <div class="card-header">
            <div class="row">
              <div class="col">
                <%= support.support_type %>
              </div>
              <div class="col text-center">
                < <%= support.id %> >
              </div>
              <div class="col text-end">
                <% user = User.find(support.user_id) %>
                <% if user.admin %>
                    <span title = "Admin" > <i class="bi bi-patch-check-fill" style= "font-size: 1.2rem; color: orange;"></i></span>
                <% elsif user.verified %>
                    <span title = "Verified" ><i class="bi bi-patch-check-fill" style= "font-size: 1.2rem; color: cornflowerblue"></i></span>
                <% end %>
                <%= link_to "#{user.first_name} #{user.last_name}", user_path(support.user_id), class:"nounderline"%>
              </div>
            </div>
          </div>

          <div class="card-body">
            <%= support.body %></br>
          </div>

          <div class="card-footer text-muted">
            <div class="row">
              <div class="col">
                <%= link_to "Show this support", support, class:"btn btn-outline-secondary btn-sm" %>
              </div>
              <div class="col text-center">
                < <%= support.id %> >
              </div>
              <div class="col text-end">
                Published <%= local_time_ago(support.created_at) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

<% end %>    
