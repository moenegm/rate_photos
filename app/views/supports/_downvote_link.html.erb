<%= content_tag "div", id: "downvote-#{support.id}" do %>
  <%= link_to downvote_support_path(support), method: :patch, remote: true, data: { disable_with: "voting..." } do %>
    <% if current_user.voted_down_on? support %>
      <i class="bi bi-hand-thumbs-down-fill", style="font-size: 1.5rem;"></i>
    <% else %>
      <i class="bi bi-hand-thumbs-down", style="font-size: 1.5rem;"></i>
    <% end %>
  <% end %>
<% end %>